{
    "name": "ts-svgmanager",
    "version": "2.0.3-beta3",
    "description": "A Typescript SVG Manager",
    "browser": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "distpkg": "sed 's/\"dist\\/index.js\"/\"index.js\"/g; s/\"dist\\/index.d.ts\"/\"index.d.ts\"/g' package.json | grep -v '\"private\": true,' > dist/package.json",
        "pub": "npm run build:clean ; npm run distpkg ; npm publish dist",
        "build": "tsc",
        "build:clean": "rm -rf dist/* ; npm run build",
        "test": "mocha -r ts-node/register tests/**/*.test.ts",
        "coverage": "nyc -r lcov -e .ts -x \"./**/*.test.ts\" npm run test",
        "docs": "typedoc --out docs src --exclude \"./src/definitions/*\" --exclude ./src/Events.ts; echo '' > ./docs/.nojekyll",
        "lint": "npx eslint ./src --ext .ts",
        "lint:tests": "eslint ./tests/**/*.ts"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/coastalwhite/ts-svgmanager.git"
    },
    "author": "Gijs Burghoorn",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/coastalwhite/ts-svgmanager/issues"
    },
    "homepage": "https://github.com/coastalwhite/ts-svgmanager#readme",
    "dependencies": {
        "nanoid": "3.1.9"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "mocha": "^8.2.0",
        "puppeteer": "^5.4.0",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.3",
        "@types/puppeteer": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.0.0",
        "eslint": "^7.9.0",
        "eslint-plugin-unused-imports": "^0.1.3",
        "nyc": "^15.1.0",
        "typedoc": "^0.19.1",
        "typescript": "^4.0.2",
        "ts-node": "9.0.0"
    }
}
